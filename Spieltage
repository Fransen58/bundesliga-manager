    <!-- Fügen Sie weitere Spieltage nach diesem Muster hinzu -->
    <h3>Spieltag 2</h3>
    <table id="spieltag2">
        <!-- Tabelleninhalt für Spieltag 2 -->
    </table>
    <button id="save-spieltag2" onclick="speichereAenderungen('spieltag2')" disabled>Speichern</button>
    <button id="cancel-spieltag2" onclick="brecheAenderungenAb('spieltag2')" disabled>Abbrechen</button>

    <script>
        let currentEditingTable = null;

        function speichereAenderungen(spieltag) {
            const table = document.getElementById(spieltag);
            const rows = table.rows;

            for (let i = 1; i < rows.length; i++) {
                const cells = rows[i].cells;
                // Speichern Sie die Änderungen in Ihrer Datenstruktur
                console.log(`Spieltag ${spieltag}, Platz ${i}: ${cells[1].firstChild.value}, ${cells[2].firstChild.value}, ${cells[3].firstChild.value}, ${cells[4].firstChild.value}, ${cells[5].firstChild.value}`);
            }

            toggleEditMode(spieltag);
        }

        function brecheAenderungenAb(spieltag) {
            toggleEditMode(spieltag);
            // Laden Sie die gespeicherten Daten für den Spieltag wieder
        }

        function toggleEditMode(spieltag) {
            const table = document.getElementById(spieltag);
            const saveBtn = document.getElementById(`save-${spieltag}`);
            const cancelBtn = document.getElementById(`cancel-${spieltag}`);

            const isEditing = currentEditingTable === spieltag;
            currentEditingTable = isEditing ? null : spieltag;

            const rows = table.rows;
            for (let i = 1; i < rows.length; i++) {
                const cells = rows[i];
                cells[2].firstChild.disabled = !isEditing;
                cells[3].firstChild.disabled = !isEditing;
                cells[4].firstChild.disabled = !isEditing;
                cells[5].firstChild.disabled = !isEditing;
                cells[6].firstChild.disabled = !isEditing;
            }

            saveBtn.disabled = !isEditing;
            cancelBtn.disabled = !isEditing;
        }
    </script>
